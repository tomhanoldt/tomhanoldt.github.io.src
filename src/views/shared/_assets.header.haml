%title
  = @globals.title

- # PageSPeed: Durch die Angabe eines Zeichensatzes in einem Meta-Tag wird der Lookahead-Downloader in IE8 deaktiviert.
= @meta_tag_http 'Content-Type', 'text/html; charset=utf-8'

= @meta_tag_http 'X-UA-Compatible', 'IE=edge'
= @meta_tag 'robots',      @globals.robots
= @meta_tag 'description', @globals.description
= @meta_tag 'keywords',    @globals.keywords
= @meta_tag 'viewport',    @globals.get('viewport', 'width=device-width, initial-scale=1.0, maximum-scale=2.0, user-scalable=yes')

= @link_tag '/images/icons/favicon.ico', 'icon', 'image/x-icon'
= @link_tag '/images/icons/favicon.ico', 'shortcut icon', 'image/x-icon'

%link{rel: 'icon',                         sizes: '32x32',   href: '/images/icons/cropped-favicon-32x32.jpg'}
%link{rel: 'icon',                         sizes: '192x192', href: '/images/icons/cropped-favicon-192x192.jpg'}
%link{rel: 'apple-touch-icon-precomposed', sizes: '180x180', href: '/images/icons/cropped-favicon-180x180.jpg'}
%meta{name: 'msapplication-TileImage', content: '/images/cropped-favicon-270x270.jpg'}

= @canonical_tag @globals.canonical

= @opengraph_tags @globals.get('opengraph_metatag_data')
= @twitter_tags @globals.get('twitter_metatag_data')

= @inline_stylesheet_link_tag 'main.css'
